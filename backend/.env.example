# Server
NODE_ENV=development
PORT=3000

# Database (PostgreSQL - schema uses provider "postgresql")
# Copy from your host (e.g. Railway: Connect → Postgres URL). Do not commit real credentials.
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require (or &schema=public for local)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# JWT - MUDE ESTA SENHA EM PRODUÇÃO!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Stripe (OPCIONAL - deixe vazio se não for usar)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_SMART_PRICE_ID=
STRIPE_PRO_PRICE_ID=

# OpenAI (OPCIONAL - deixe vazio se não for usar)
OPENAI_API_KEY=

# Email SMTP (OPCIONAL - necessário para reset de senha, confirmação de agendamento e boas-vindas)
# Se não configurar, os emails são apenas logados no console.
# Exemplos:
#   Gmail: use App Password (conta Google → Segurança → Senhas de app)
#     SMTP_HOST=smtp.gmail.com
#     SMTP_PORT=587
#     SMTP_USER=seu@gmail.com
#     SMTP_PASS=senha-de-app
#     SMTP_FROM=SmartSupport <seu@gmail.com>
#   SendGrid: SMTP relay
#     SMTP_HOST=smtp.sendgrid.net
#     SMTP_PORT=587
#     SMTP_USER=apikey
#     SMTP_PASS=<sua API key>
#     SMTP_FROM=noreply@seudominio.com
#   Outlook/Office365: smtp.office365.com, porta 587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
